<!-- MainWindow.xaml -->
<Window x:Class="AlarmCompanyManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Alarm Company Manager"
        Height="900" Width="1400"
        MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{StaticResource DefaultFontFamily}">

    <Window.Resources>
        <Style x:Key="NavigationButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Height" Value="48" />
            <Setter Property="Margin" Value="0,2" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
        </Style>
    </Window.Resources>

    <materialDesign:DialogHost Identifier="MainDialogHost" CloseOnClickAway="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Top Menu Bar -->
            <materialDesign:Card Grid.Row="0" materialDesign:ElevationAssist.Elevation="Dp2" Margin="0,0,0,2">
                <Grid Height="64">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Menu Toggle Button -->
                    <Button Grid.Column="0" x:Name="MenuToggleButton"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Width="64" Height="64"
                            Click="MenuToggleButton_Click">
                        <materialDesign:PackIcon Kind="Menu" Width="24" Height="24" />
                    </Button>

                    <!-- Title and Navigation -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                        <TextBlock Text="Alarm Company Manager" 
                                   FontSize="20" FontWeight="Medium"
                                   VerticalAlignment="Center" />
                        <TextBlock Text=" | " Margin="8,0" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding CurrentViewTitle}" 
                                   FontSize="16" 
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   VerticalAlignment="Center" />
                    </StackPanel>

                    <!-- User Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                        <!-- Search Box -->
                        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp1" Margin="0,0,16,0">
                            <Grid Width="300">
                                <TextBox x:Name="SearchTextBox"
                                         materialDesign:HintAssist.Hint="Search customers, work orders..."
                                         materialDesign:TextFieldAssist.HasLeadingIcon="True"
                                         materialDesign:TextFieldAssist.LeadingIcon="Search"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                         FontSize="14" Margin="8"
                                         KeyDown="SearchTextBox_KeyDown" />
                            </Grid>
                        </materialDesign:Card>

                        <!-- Notification Button -->
                        <Button Style="{StaticResource MaterialDesignIconButton}" Margin="8,0">
                            <materialDesign:PackIcon Kind="Bell" />
                        </Button>

                        <!-- User Menu -->
                        <Button Style="{StaticResource MaterialDesignIconButton}" Margin="8,0">
                            <materialDesign:PackIcon Kind="Account" />
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Main Content Area -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Navigation Drawer -->
                <materialDesign:DrawerHost Grid.Column="0" Grid.ColumnSpan="2"
                                           x:Name="DrawerHost"
                                           IsLeftDrawerOpen="{Binding IsMenuOpen}"
                                           LeftDrawerBackground="{DynamicResource MaterialDesignPaper}">

                    <materialDesign:DrawerHost.LeftDrawerContent>
                        <materialDesign:Card Width="280" materialDesign:ElevationAssist.Elevation="Dp2">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="0,16">
                                    <!-- Dashboard -->
                                    <Button Style="{StaticResource NavigationButtonStyle}"
                                            Command="{Binding NavigateCommand}"
                                            CommandParameter="Dashboard">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="ViewDashboard" Width="20" Height="20" Margin="0,0,16,0" />
                                            <TextBlock Text="Dashboard" />
                                        </StackPanel>
                                    </Button>

                                    <!-- Customers Section -->
                                    <Expander Header="Customers" IsExpanded="True" Margin="8,8,8,0">
                                        <Expander.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="AccountGroup" Width="20" Height="20" Margin="0,0,16,0" />
                                                    <TextBlock Text="{Binding}" FontWeight="Medium" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </Expander.HeaderTemplate>
                                        <StackPanel Margin="24,8,0,8">
                                            <Button Style="{StaticResource NavigationButtonStyle}"
                                                    Command="{Binding NavigateCommand}"
                                                    CommandParameter="CustomerList">
                                                <TextBlock Text="All Customers" />
                                            </Button>
                                            <Button Style="{StaticResource NavigationButtonStyle}"
                                                    Command="{Binding NavigateCommand}"
                                                    CommandParameter="AddCustomer">
                                                <TextBlock Text="Add New Customer" />
                                            </Button>
                                        </StackPanel>
                                    </Expander>

                                    <!-- Work Orders Section -->
                                    <Expander Header="Work Orders" IsExpanded="True" Margin="8,8,8,0">
                                        <Expander.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="ClipboardList" Width="20" Height="20" Margin="0,0,16,0" />
                                                    <TextBlock Text="{Binding}" FontWeight="Medium" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </Expander.HeaderTemplate>
                                        <StackPanel Margin="24,8,0,8">
                                            <Button Style="{StaticResource NavigationButtonStyle}"
                                                    Command="{Binding NavigateCommand}"
                                                    CommandParameter="WorkOrderList">
                                                <TextBlock Text="All Work Orders" />
                                            </Button>
                                            <Button Style="{StaticResource NavigationButtonStyle}"
                                                    Command="{Binding NavigateCommand}"
                                                    CommandParameter="AddWorkOrder">
                                                <TextBlock Text="Create Work Order" />
                                            </Button>
                                            <Button Style="{StaticResource NavigationButtonStyle}"
                                                    Command="{Binding NavigateCommand}"
                                                    CommandParameter="Calendar">
                                                <TextBlock Text="Calendar" />
                                            </Button>
                                        </StackPanel>
                                    </Expander>

                                    <!-- Reports Section -->
                                    <Expander Header="Reports" Margin="8,8,8,0">
                                        <Expander.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="ChartLine" Width="20" Height="20" Margin="0,0,16,0" />
                                                    <TextBlock Text="{Binding}" FontWeight="Medium" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </Expander.HeaderTemplate>
                                        <StackPanel Margin="24,8,0,8">
                                            <Button Style="{StaticResource NavigationButtonStyle}"
                                                    Command="{Binding NavigateCommand}"
                                                    CommandParameter="CustomerReports">
                                                <TextBlock Text="Customer Reports" />
                                            </Button>
                                            <Button Style="{StaticResource NavigationButtonStyle}"
                                                    Command="{Binding NavigateCommand}"
                                                    CommandParameter="WorkOrderReports">
                                                <TextBlock Text="Work Order Reports" />
                                            </Button>
                                            <Button Style="{StaticResource NavigationButtonStyle}"
                                                    Command="{Binding NavigateCommand}"
                                                    CommandParameter="CustomReports">
                                                <TextBlock Text="Custom Reports" />
                                            </Button>
                                        </StackPanel>
                                    </Expander>

                                    <!-- Settings -->
                                    <Button Style="{StaticResource NavigationButtonStyle}"
                                            Command="{Binding NavigateCommand}"
                                            CommandParameter="Settings"
                                            Margin="8,16,8,8">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Cog" Width="20" Height="20" Margin="0,0,16,0" />
                                            <TextBlock Text="Settings" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </ScrollViewer>
                        </materialDesign:Card>
                    </materialDesign:DrawerHost.LeftDrawerContent>

                    <!-- Main Content -->
                    <Grid>
                        <ContentControl Content="{Binding CurrentView}" 
                                        Margin="16" />

                        <!-- Loading Overlay -->
                        <Grid Background="#80FFFFFF" 
                              Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                             IsIndeterminate="True"
                                             Width="64" Height="64" />
                                <TextBlock Text="{Binding BusyMessage}" 
                                           Margin="0,16,0,0"
                                           HorizontalAlignment="Center"
                                           FontSize="16" FontWeight="Medium" />
                            </StackPanel>
                        </Grid>
                    </Grid>

                </materialDesign:DrawerHost>
            </Grid>

            <!-- Status Bar -->
            <materialDesign:Card Grid.Row="2" materialDesign:ElevationAssist.Elevation="Dp1" Margin="0,2,0,0">
                <Grid Height="32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                               VerticalAlignment="Center" Margin="16,0"
                               FontSize="12"
                               Foreground="{DynamicResource MaterialDesignBodyLight}" />

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Database: " FontSize="12" 
                                   Foreground="{DynamicResource MaterialDesignBodyLight}" />
                        <Ellipse Width="8" Height="8" Margin="4,0"
                                 Fill="{Binding DatabaseConnectionStatus, Converter={StaticResource BooleanToColorConverter}}" />
                        <TextBlock Text="{Binding DatabaseStatus}" FontSize="12" Margin="4,0"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}" />
                    </StackPanel>

                    <TextBlock Grid.Column="2" 
                               Text="Ready" 
                               VerticalAlignment="Center" Margin="16,0"
                               FontSize="12"
                               Foreground="{DynamicResource MaterialDesignBodyLight}" />
                </Grid>
            </materialDesign:Card>
        </Grid>
    </materialDesign:DialogHost>
</Window>